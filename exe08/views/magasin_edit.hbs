<h2>Add Magasin</h2>
<form action="/magasins/add/{{magasin._id}}" class="card" method="POST" enctype="multipart/form-data">
    <label for="name">
        Name:
        <input type="text" name="name" id="name" value={{magsin.name}}>
    </label>
    <label for="slug">
        Slug:
        <input type="text" name="slug" id="slug" value={{magsin.slug}}>
    </label>
    <label for="description">
        Description :
        <textarea name="description" id="description" cols="30" rows="10">{{magasin.description}}</textarea>
    </label>
    <label for="photo">
        <input type="file" name="photo" id="photo" accept="image/png,image/jpeg,image/gif" value="{{magasin.photo}}">
    </label>
    <label for="location[address]">
        Adresse :
        <input type="text" name=location[address] id="Adresse" value="{{magasin.location.address}}">
    </label>
    <label for="location[coordinates][0]">
        Longitude :
        <input type="text" name=location[coordinates][0] id="lng" value="{{magasin.location.coordinates.[0]}}">
    </label>
    <label for="location[coordinates][1]">
        Latitude :
        <input type="text" name=location[coordinates][1] id="lat" value="{{magasin.location.coordinates.[1]}}">
    </label>
    <input type="submit" name="Ajouter un magasin">
</form>